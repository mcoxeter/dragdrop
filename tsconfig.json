{
  "compilerOptions": {
    "jsx": "react-jsx",           // ✅ required for JSX in React 17+
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["jest", "node"],    // ✅ ensures Jest types are picked up
    "baseUrl": ".",               // optional
    "paths": {                    // optional: for aliases
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "jest.setup.ts", "src/types/css.d.ts"],
}
